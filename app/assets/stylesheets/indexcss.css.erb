/*
	Override for blue background compensates for bounds changes along the top of the screen
	in order to accomodate for mobile
*/
@media (max-width: 979px)
{
	.mainImg
	{
		margin-top: 0px;
	}
	
	.bitshootImageLeft
	{
		width: 50px;
		height: 50px;
	}

	.bitshootImageRight
	{
		width: 50px;
		height: 50px;
	}
	
	.socialMediaButton
	{
		margin-top: 15px;
	}
	
	.googlePlusButton
	{
		margin-top: 12px;
	}
}

/* 
	Override to Allow for blue background to cover left to right completely
	while still maintaining the bounds for the navbar
*/
@media (max-width: 767px)
{

	body
	{
		padding: 0;
	}
	
	.navigator
	{
		padding-left: 20px;
		padding-right: 0px;
		margin-right: 0;
	}
	
	/* Adjust Page wrapper to full page view */
	.page-wrapper
	{
		margin-left: 0px; 
		margin-right: 0px;
	}
	
	#footer
	{
		margin-right: 0px;
		margin-left: 0px;
	}
	
	.dropDownButton
	{
		width: 60px;
	}
}

